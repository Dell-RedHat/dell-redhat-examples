apiVersion: v1
baseDomain: {{ hostvars[inventory_hostname].ocp_cluster_domain }}
compute:
- name: worker
  replicas: 0
controlPlane:
  name: master
  replicas: 1
metadata:
  name: {{ hostvars[inventory_hostname].ocp_cluster_name }}
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16
  networkType: OVNKubernetes
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
bootstrapInPlace:
  installationDisk: {{ hostvars[inventory_hostname].ocp_setup_device | default('/dev/sda', true) }}
pullSecret: '{{ hostvars[inventory_hostname].ocp_pull_secret }}'
sshKey: '{{ hostvars[inventory_hostname].ocp_coreos_ssh_key }}'
