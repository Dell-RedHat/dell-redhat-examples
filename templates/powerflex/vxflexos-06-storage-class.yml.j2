---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: vxflexos-storage-class
  annotations:
    storageclass.kubernetes.io/is-default-class: "true"
provisioner: csi-vxflexos.dellemc.com
reclaimPolicy: Delete
allowVolumeExpansion: true
parameters:
  storagepool: {{ powerflex_storagepool }}
  protectiondomain: {{ powerflex_protectiondomain }}
  systemID: {{ powerflex_system_id }}
volumeBindingMode: WaitForFirstConsumer
allowedTopologies:
- matchLabelExpressions:
  - key: csi-vxflexos.dellemc.com/{{ powerflex_system_id }}
    values:
    - csi-vxflexos.dellemc.com